import java.util.concurrent.ArrayBlockingQueue;

public class ProdConsBuffer {
	int n; // Taille du tableau
	int nempty; // Nombre de cases vides
	int nfull; // Nombre de cases remplies
	
	ArrayBlockingQueue buffer = new ArrayBlockingQueue(n);
	// buffer Ã  n entiers
	
	public void Producer(Message msg) {
		while (nempty == 0) { // Aucune case vide <=> elles sont toutes remplies
			try {
				wait();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		
		notifyAll();
	}
	
	public Message Consume() {
		while (nfull == 0) { // Aucune case remplie <=> elles sont toutes vides
			try {
				wait();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		
		notifyAll();
	}
	
	
}
